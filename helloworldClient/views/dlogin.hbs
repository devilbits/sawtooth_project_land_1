<div class="login-container">
    <div class="row">
        <div class="col-md-6 login-form-1">
            <h3>User Login</h3>
            <form action="/usr" method="GET"> 
            <div class="form-group">
                <input type="text" id="usrpvtkey" class="form-control" placeholder="Your Private Key *" value="" />
            </div>
            <br>
            <div class="form-group">
                <input type="text" id="adhar" class="form-control" placeholder="Your Aadhar Number *" value="" />
            </div>
            <br>
            <div class="form-group">
                <input type="text" id="name" class="form-control" placeholder="Your Name *" value="" />
            </div>
            <br>
            <div class="form-group">
                <button type="submit" onclick="writeusr()" class="btnSubmit" >LOGIN</button>
            </div>
            </form>
        </div>
        <div class="col-md-6 login-form-2">
            
            <h3>Registrar Login</h3>
             <form action="/regstr" method="GET">
            <div class="form-group">
                <input type="text" id="pvtkey" class="form-control" placeholder="Your Private Key *" />
            </div>
            <br>
            <div class="form-group">
                <button type="submit" onclick="writereg()" class="btnSubmit">LOGIN</button>
            </div>
            
            </form>
        </div>
    </div>
</div>

<script>
function writeusr(){
    const pvtkey = document.getElementById('usrpvtkey').value;
       const adhar_no = document.getElementById('adhar').value;
       const usr_name = document.getElementById('name').value;
    $.post('/usr',{key:pvtkey,no:adhar_no,name:usr_name},'json');
}

function writereg(){
       var pvtkey = document.getElementById('pvtkey').value;
      $.post('/regstr',{key:pvtkey},'json');
}



</script>
